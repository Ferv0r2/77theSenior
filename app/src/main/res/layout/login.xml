<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EEE0"
    android:orientation="vertical"
    tools:context=".common.LoginActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="77 맞은 노인" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/login1"
                android:hint="ID"
                android:inputType="text"
                android:textColor="#777777"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:textColor="#777777"
                    android:textSize="15dp"
                    android:background="@drawable/login1"
                    android:hint="PW" />

            </LinearLayout>

            <Button
                android:onClick="signIn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="#2C2E30"
                android:textColor="#ffffff"
                android:text="로그인"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/regst"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#888A8A"
                    android:textColor="#ffffff"
                    android:text="회원가입"
                    android:textSize="20dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idPw"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아이디 / 비밀번호 찾기"
                    android:textColor="#808080"
                    android:textSize="15dp" />

            </LinearLayout>

            <View
                android:id="@+id/divider1"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="#D3D1D1" ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/naver"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:paddingLeft="27dp"
                    android:paddingRight="17dp"
                    android:drawableLeft="@drawable/naver1"
                    android:background="@drawable/buttonborder1"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="네이버 로그인" />

                <Button
                    android:id="@+id/talk"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:paddingLeft="30dp"
                    android:paddingRight="15dp"
                    android:drawableLeft="@drawable/talk1"
                    android:background="@drawable/buttonborder1"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="카카오톡 로그인" />

                <Button
                    android:id="@+id/google"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:paddingLeft="32dp"
                    android:paddingRight="14dp"
                    android:drawableLeft="@drawable/google"
                    android:background="@drawable/buttonborder1"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="구글 로그인" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>