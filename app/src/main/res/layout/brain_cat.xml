                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/box20"
                    android:src="@drawable/box"/>
            </TableRow>
        </TableLayout>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="80dp"
        android:textColor="#f0f"
        android:id="@+id/tv"/>

</LinearLayout>