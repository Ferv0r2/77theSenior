<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EEE0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="#CFB997"
            android:drawableLeft="@drawable/walk1"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="265dp"
            android:text="걷기"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="76dp"
            android:layout_alignParentRight="true"
            android:background="#CFB997"
            app:srcCompat="@drawable/back" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp" />

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

                <ImageButton
                    android:id="@+id/calendar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/datePicker"
                    android:background="@color/white"
                    app:srcCompat="@drawable/calender2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/circleBar"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    app:progress_end_color="#0100FF"
                    app:progress_start_color="#FF0000"
                    app:progress_stroke_width="13dp"
                    app:progress_text_size="15dp"
                    app:progress_text_color="#BDBDBD"
                    app:style="line"
                    app:line_count="30"/>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/textview"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userNickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:text="닉네임 :   "
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="걸음수 : 0"
                        android:textSize="15dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ProgressBar
                    android:layout_marginLeft="10dp"
                    android:progressDrawable="@drawable/progressbar"
                    android:max="100"
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/walk"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:text="0 걸음"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0 km"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="9dp"
                    android:text="0 cal"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#D3D1D1"></View>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:background="@drawable/textview5"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/chart2" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>