<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EEE0"
    android:orientation="vertical"
    tools:context=".common.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/location2"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="#CFB997"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_alignParentRight="true"
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="76dp"
            android:background="#CFB997"
            app:srcCompat="@drawable/back" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/login1"
                    android:hint="  이름"
                    android:paddingLeft="5dp"
                    android:textColor="#777777"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="@drawable/login1"
                    android:hint="  닉네임"
                    android:paddingLeft="5dp"
                    android:textColor="#777777"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:text="남성" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:text="여성" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spinner"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_year"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinner_month"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinner_date"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:background="@drawable/login1"
                    android:hint="  이메일(아이디) "
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="#777777"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:background="@drawable/login1"
                    android:hint="  비밀번호 ( 4자에서 16자 사이 )"
                    android:paddingLeft="5dp"
                    android:textColor="#777777"
                    android:password="true"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_passwordCheck"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:background="@drawable/login1"
                    android:hint="  비밀번호 확인"
                    android:paddingLeft="5dp"
                    android:password="true"
                    android:textColor="#777777"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/phonenum"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:background="@drawable/login1"
                    android:hint="  전화번호( '-' 제외 )"
                    android:paddingLeft="5dp"
                    android:inputType="phone"
                    android:textColor="#777777"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/tell"
                    android:layout_width="123dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#bbbbbb"
                    android:text="인증번호 전송"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/tellText"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:background="@drawable/login1"
                    android:hint="  인증번호 입력"
                    android:paddingLeft="5dp"
                    android:textColor="#777777"
                    android:textSize="15dp"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/tellCheck"
                    android:layout_width="123dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#bbbbbb"
                    android:text="인증번호 확인"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:visibility="invisible"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center">

                    <CheckBox
                        android:id="@+id/checkbox1"
                        android:layout_width="32dp"
                        android:layout_height="30dp" />

                    <Button
                        android:id="@+id/privacy"
                        android:layout_width="268dp"
                        android:layout_height="30dp"
                        android:background="#00ff0000"
                        android:text="개인정보 처리방침 동의 (필수)"
                        android:textAlignment="textStart"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <CheckBox
                        android:id="@+id/checkbox2"
                        android:layout_width="32dp"
                        android:layout_height="30dp" />

                    <Button
                        android:id="@+id/service"
                        android:layout_width="268dp"
                        android:layout_height="30dp"
                        android:background="#00ff0000"
                        android:text="서비스 이용약관 동의 (필수)"
                        android:textAlignment="textStart"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <CheckBox
                        android:id="@+id/checkbox3"
                        android:layout_width="32dp"
                        android:layout_height="30dp" />

                    <Button
                        android:id="@+id/location"
                        android:layout_width="268dp"
                        android:layout_height="30dp"
                        android:background="#00ff0000"
                        android:text="위치기반 서비스 이용약관 (필수)"
                        android:textAlignment="textStart"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <CheckBox
                        android:id="@+id/checkbox4"
                        android:layout_width="32dp"
                        android:layout_height="30dp" />

                    <Button
                        android:layout_width="268dp"
                        android:layout_height="30dp"
                        android:background="#00ff0000"
                        android:text="마케팅 수신 정보 동의 (선택)"
                        android:textAlignment="textStart"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <CheckBox
                        android:id="@+id/checkbox5"
                        android:layout_width="32dp"
                        android:layout_height="30dp" />

                    <Button
                        android:layout_width="268dp"
                        android:layout_height="30dp"
                        android:background="#00ff0000"
                        android:text="모두 동의합니다."
                        android:textAlignment="textStart"
                        android:textSize="13dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_signUp"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:text="다음"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>