<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EEE0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/set1"
            android:layout_width="410dp"
            android:layout_height="76dp"
            android:background="#CFB997"
            android:drawableLeft="@drawable/ic_mechanical_gears_"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="275dp"
            android:text="설정"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="76dp"
            android:layout_alignParentRight="true"
            android:background="#CFB997"
            app:srcCompat="@drawable/back" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/association"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textview5"
                    android:drawableLeft="@drawable/ic_open_book"
                    android:paddingLeft="25dp"
                    android:text="치매와 앱의 연관성"
                    android:textColor="#4C4B4B"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/push_alram"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textview5"
                    android:drawableLeft="@drawable/ic_bell"
                    android:paddingLeft="22dp"
                    android:text="푸시 알림 설정"
                    android:textColor="#4C4B4B"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/dementia_grade"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textview5"
                    android:drawableLeft="@drawable/ic_review"
                    android:paddingLeft="25dp"
                    android:paddingRight="20dp"
                    android:text="치매 등급"
                    android:textColor="#4C4B4B"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/pro_register_code"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textview5"
                    android:drawableLeft="@drawable/ic_family"
                    android:paddingLeft="25dp"
                    android:text="보호자 등록 코드"
                    android:textColor="#4C4B4B"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/terms_of_service"
                    android:layout_width="165dp"
                    android:layout_height="55dp"
                    android:background="@drawable/textview5"
                    android:text="서비스 약관"
                    android:textColor="#4C4B4B"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/personal_info"
                    android:layout_width="165dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/textview5"
                    android:text="개인정보 취급방침"
                    android:textColor="#4C4B4B"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>