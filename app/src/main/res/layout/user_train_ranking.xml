<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:background="#CFB997"
                android:drawableLeft="@drawable/rank"
                android:gravity="center"
                android:paddingLeft="23dp"
                android:paddingRight="220dp"
                android:text="순위"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/back"
                android:layout_width="70dp"
                android:layout_height="76dp"
                android:background="#CFB997"
                android:src="@drawable/back"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="순위"/>

                <TextView
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="닉네임"/>

                <TextView
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="점수"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="#D3D1D1" ></View>

            <ListView
                android:id="@+id/train_item"
                android:layout_width="match_parent"
                android:layout_height="480dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="#D3D1D1" ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="👑 내 순위 👑"
                    android:layout_margin="5dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="#D3D1D1" ></View>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/myRankNum"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="순위"/>

                    <TextView
                        android:id="@+id/myNickname"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="닉네임"/>

                    <TextView
                        android:id="@+id/myTrained"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="걸음수"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <Button
                android:id="@+id/walkRank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="걸음수"
                android:background="@drawable/stroke"
                android:textSize="18dp"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/stroke"
                android:gravity="center"
                android:text="두뇌훈련"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>





</RelativeLayout>