<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EEE0"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="bottom|center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/FindCat"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:background="@drawable/textview9"
                    android:drawableTop="@drawable/ic_cat"
                    android:paddingTop="40dp"
                    android:layout_marginRight="5dp"
                    android:text="고양이 찾기"
                    android:textColor="#4C4B4B"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/watermelon"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:background="@drawable/textview9"
                    android:drawableTop="@drawable/ic_watermelon"
                    android:paddingTop="40dp"
                    android:layout_marginLeft="5dp"
                    android:text="수박"
                    android:textColor="#4C4B4B"
                    android:textSize="28dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/space"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:background="@drawable/textview9"
                    android:drawableTop="@drawable/ic_cubes"
                    android:paddingTop="40dp"
                    android:layout_marginRight="5dp"
                    android:paddingRight="3dp"
                    android:text="공간지각"
                    android:textColor="#4C4B4B"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/calc"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:background="@drawable/textview9"
                    android:drawableTop="@drawable/ic_calculator"
                    android:paddingTop="40dp"
                    android:layout_marginLeft="5dp"
                    android:paddingRight="3dp"
                    android:text="단순계산"
                    android:textColor="#4C4B4B"
                    android:textSize="28dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
</LinearLayout>