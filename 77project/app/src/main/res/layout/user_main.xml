<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EEE0"
    android:orientation="vertical"
    android:id="@+id/layout_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <Button
            android:id="@+id/logout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text=" 로그아웃"
            android:drawableLeft="@drawable/ic_logout"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/locate"
            android:layout_toLeftOf="@+id/myPage"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F5EEE0"
            android:drawableLeft="@drawable/ic_location"
            android:text="위치"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/myPage"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/setting"
            android:backgroundTint="#F5EEE0"
            android:drawableLeft="@drawable/ic_user"
            android:text="  my"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/setting"
            android:layout_alignParentRight="true"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F5EEE0"
            android:drawableLeft="@drawable/ic_settings"
            android:text=" 설정"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@drawable/textview5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="나의 건강 관리"
                    android:textColor="#4C4B4B"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="250dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/main_walking"/>

                        <TextView
                            android:id="@+id/walk_step"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="0 걸음"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/training"/>

                        <TextView
                            android:id="@+id/brain_train"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="0 점수"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/calendar"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/textview6"
                    android:drawableLeft="@drawable/calendar"
                    android:paddingLeft="40dp"
                    android:paddingRight="30dp"
                    android:text="캘린더 보기"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/walking"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:background="@drawable/textview9"
                    android:drawableLeft="@drawable/walk1"
                    android:paddingLeft="15dp"
                    android:paddingRight="3dp"
                    android:text="걷기"
                    android:textColor="#4C4B4B"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/brainTraining"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textview9"
                    android:drawableLeft="@drawable/training"
                    android:paddingLeft="10dp"
                    android:text="두뇌훈련"
                    android:textColor="#4C4B4B"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ranking"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:background="@drawable/textview9"
                    android:drawableLeft="@drawable/ic_crown_fill"
                    android:paddingLeft="20dp"
                    android:paddingRight="3dp"
                    android:text="순위"
                    android:textColor="#4C4B4B"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/diagnosis"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textview9"
                    android:drawableLeft="@drawable/diag"
                    android:paddingLeft="10dp"
                    android:text="진단하기"
                    android:textColor="#4C4B4B"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/textview8_1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="치매 뉴스 보기"
                    android:textColor="#4C4B4B"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="250dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="?android:attr/listDivider" />


                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/usernews"/>



            </LinearLayout>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="370dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logo0" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_1" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>