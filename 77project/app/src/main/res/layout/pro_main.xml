<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EEE0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logout"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text=" 로그아웃"
                android:drawableLeft="@drawable/ic_logout"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <Button
                android:id="@+id/myPage"
                android:layout_toLeftOf="@+id/setting"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:drawableLeft="@drawable/ic_user"
                android:text="  My"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <Button
                android:id="@+id/setting"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:drawableLeft="@drawable/ic_settings"
                android:text=" 설정"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@drawable/textview5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="사용자의 건강 관리"
                    android:textColor="#4C4B4B"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="250dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/main_walking"/>

                        <TextView
                            android:id="@+id/walk_step"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="0 걸음"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/training"/>

                        <TextView
                            android:id="@+id/brain_train"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="0 점수"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/myUserCalendar"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/textview6"
                    android:drawableLeft="@drawable/calendar"
                    android:paddingLeft="40dp"
                    android:paddingRight="30dp"
                    android:text="캘린더 보기"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/locationTrace"
                    android:layout_width="340dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textview5"
                    android:drawableLeft="@drawable/location"
                    android:paddingLeft="20dp"
                    android:text="위치추적"
                    android:textColor="#4C4B4B"
                    android:textSize="35dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/userRegister"
                    android:layout_width="340dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textview5"
                    android:drawableLeft="@drawable/user"
                    android:paddingLeft="25dp"
                    android:text="사용자 등록"
                    android:textColor="#4C4B4B"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="370dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logo0" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_1" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>