<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EEE0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logout"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text=" 로그아웃"
                android:drawableLeft="@drawable/ic_logout"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <Button
                android:id="@+id/my2"
                android:layout_toLeftOf="@+id/set"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:drawableLeft="@drawable/ic_user"
                android:text="  My"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <Button
                android:id="@+id/set"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:drawableLeft="@drawable/ic_settings"
                android:text=" 설정"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@drawable/textview5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userHealth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="사용자의 건강 관리"
                    android:textColor="#4C4B4B"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider7"
                    android:layout_width="250dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="?android:attr/listDivider" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="290dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/circle" />

                <Button
                    android:id="@+id/calendar1"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/textview6"
                    android:drawableLeft="@drawable/calendar"
                    android:paddingLeft="40dp"
                    android:paddingRight="30dp"
                    android:text="캘린더 보기"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/locationSearch"
                    android:layout_width="340dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textview5"
                    android:drawableLeft="@drawable/location"
                    android:paddingLeft="20dp"
                    android:text="위치추적"
                    android:textColor="#4C4B4B"
                    android:textSize="35dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/user1"
                    android:layout_width="340dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textview5"
                    android:drawableLeft="@drawable/user"
                    android:paddingLeft="25dp"
                    android:text="사용자 등록"
                    android:textColor="#4C4B4B"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="370dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logo0" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="고객센터 | 1588-1588 | 경기도 성남시 신구대학교" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copyright © 2021 GB Inc. All rights reserved.    " />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>